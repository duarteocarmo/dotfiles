{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ],
      "enabled": true
    },
    "vibium": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "vibium"
      ],
      "enabled": true
    }
  }
}
